<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigateFragment">

    <fragment
        android:id="@+id/navigateFragment"
        android:name="com.example.interntasks3.view.NavigateFragment"
        android:label="fragment_navigate"
        tools:layout="@layout/fragment_navigate" >
        <action
            android:id="@+id/action_navigateFragment_to_counterFragment"
            app:destination="@id/counterFragment" />
        <action
            android:id="@+id/action_navigateFragment_to_guessGameFragment"
            app:destination="@id/guessGameFragment" />
    </fragment>
    <fragment
        android:id="@+id/counterFragment"
        android:name="com.example.interntasks3.view.CounterFragment"
        android:label="CounterFragment" />
    <fragment
        android:id="@+id/guessGameFragment"
        android:name="com.example.interntasks3.view.GuessGameFragment"
        android:label="GuessGameFragment" >
        <action
            android:id="@+id/action_guessGameFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.interntasks3.view.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" />
</navigation>